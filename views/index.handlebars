<h1 class="text">Eat-Da-Burger App</h1>

<img id="burgerPic" src="/assets/img/burger.jpg" alt="">

<h3 class="text">Eat As Many Burgers As You Want!!!</h3>

<!-- Pass in data from server.js -->
<div class="row">
    <div class="column">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <p><span>ID: {{this.id}}. {{this.burger_name}}</span>
                    <button data-id="{{this.id}}" class="updateBurger">Devour</button></p>
            </li>
    {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div class="column">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                <p><span>ID: {{this.id}}. {{this.burger_name}}</span>
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h3 class="text">Add a Burger</h3>

<div class="form-div">
<form class="form-inline" class="text" class="create-form">
    <div class="form-group">
        <label for="newBurg">New Burger:</label>
        <input type="text" id="newBurger" name="newBurger">
    </div>
    <button type="submit" id="addBurger">Add A Burger</button>
</form>
</div>